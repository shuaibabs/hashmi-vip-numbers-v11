
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow create: if (request.auth != null && isAdmin()) || (request.auth != null && request.auth.uid == userId);
      allow update: if (request.auth != null && request.auth.uid == userId) || (request.auth != null && isAdmin());
      allow read: if request.auth != null;
      allow list: if request.auth != null && isAdmin();
      allow delete: if request.auth != null && isAdmin() && request.auth.uid != userId;
    }

    // Rules for other collections
    match /numbers/{docId} {
      allow read, create, update, delete: if request.auth != null;
    }
    match /sales/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /prebookings/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /portouts/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /reminders/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /activities/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /dealerPurchases/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /payments/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
  }
}
